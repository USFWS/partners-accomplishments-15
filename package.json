{
  "name": "partners-15",
  "version": "1.0.0",
  "private": true,
  "description": "Accomplishments for the Southeast Region Partners program in 2015",
  "main": "index.js",
  "watch": {
    "minify:html": "app/index.html",
    "shrink:img": "app/images/**/*",
    "shrink:svg": "app/svg/*"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "minify:json": "json-minify app/data/accomplishments.geojson > dist/data/accomplishments.js",
    "prebuild:sass": "rimraf -rf dist/styles/*",
    "build:sass": "node-sass --output-style compressed app/sass/styles.scss | postcss -u autoprefixer -o dist/css/styles.css",
    "prewatch:sass": "npm run build:sass",
    "watch:sass": "node-sass -w app/sass/styles.scss dist/css/styles.css",
    "minify:html": "htmlmin -o dist/index.html app/index.html",
    "prebuild:js": "rimraf -rf dist/js/*",
    "build:js": "browserify app/js/index.js | uglifyjs -mc > dist/js/bundle.js",
    "watch:js": "watchify app/js/index.js -o dist/js/bundle.js -dv",
    "preshrink:img": "rimraf dist/images/*",
    "shrink:img": "imagemin app/img/**/* dist/img/ -p",
    "shrink:svg": "imagemin -P svgo app/svg/* dist/img",
    "shrink:graphics": "npm run shrink:img & npm run shrink:svg",
    "serve": "browser-sync start --server dist --files 'dist/**/*'",
    "watch": "npm-watch",
    "clean:dist": "rimraf -rf dist",
    "build:dist": "node app/js/build.js",
    "prestart": "npm run clean:dist && npm run build:dist",
    "start": "npm run shrink:graphics & npm run minify:html & npm run watch:js & npm run watch:sass & npm run watch & npm run minify:json & npm run serve",
    "prebuild": "npm run clean:dist && npm run build:dist",
    "build": "npm run shrink:graphics && npm run minify:html && npm run build:js && npm run build:sass && npm run minify:json",
    "inspect:bundle": "browserify --full-paths app/js/index.js | uglifyjs -mc | Discify --open",
    "publish:demo": "npm run build && gh-pages -d dist"
  },
  "author": "@r0yhewitt",
  "license": "SAX-PD",
  "dependencies": {
    "events": "^1.1.0",
    "leaflet": "^1.0.0-beta.2",
    "lodash.foreach": "^4.0.0",
    "xhr": "^2.2.0"
  },
  "devDependencies": {
    "autoprefixer": "^6.2.3",
    "browser-sync": "^2.11.0",
    "disc": "^1.3.2",
    "gh-pages": "^0.8.0",
    "html-minifier-cli": "^0.1.0",
    "imagemin-cli": "^2.1.0",
    "mkdirp": "^0.5.1",
    "node-sass": "^3.4.2",
    "npm-watch": "^0.1.1",
    "postcss-cli": "^2.3.3",
    "rimraf": "^2.5.0",
    "svgo": "^0.6.1",
    "uglifyjs": "^2.4.10",
    "watchify": "^3.7.0"
  }
}
